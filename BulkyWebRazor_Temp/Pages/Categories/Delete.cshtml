@page
@model BulkyWebRazor_Temp.Pages.Categories.DeleteModel

<form method="post">
    <input asp-for="Category.Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0" asp-for="Category.Name"></label>
            <input type="text" disabled asp-for="Category.Name" class="form-control"/>
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0" asp-for="Category.DisplayOrder"></label>
            <input type="text" disabled asp-for="Category.DisplayOrder" class="form-control"/>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a class="btn btn-outline-secondary form-control" asp-page="/categories/index">Back to lIST</a>
            </div>
            </div>
          
    </div>

</form>
